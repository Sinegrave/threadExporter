{

    "description": "export threads as a copy-paste or as a plain text file.",
    "manifest_version": 2,
    "name": "dw thread exporter",
    "version": "1.0.0",
    "homepage_url": "https://github.com/Sinegrave/Atlas",
    "icons": {
      "48": "icons/cd.png"
    },
  
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["atlas.js"]
      }
    ],

    "permissions": [
      "storage", "tabs"
    ],
    
    "browser_action": {
        "browser_style": true,
        "default_icon": "icons/cd.png",
        "default_title": "dw thread exporter",
        "default_popup": "popup/popup.html"
      }
      
  }